            gap: 1.5rem;
        }
        
        .exam-detail-item {
            margin-bottom: 0.5rem;
        }
        
        .exam-detail-label {
            font-size: 0.875rem;
            color: var(--secondary-text);
            margin-bottom: 0.25rem;
        }
        
        .exam-detail-value {
            font-weight: 500;
        }
        
        /* Action buttons */
        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
        
