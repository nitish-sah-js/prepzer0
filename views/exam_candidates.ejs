            color: white;
        }
        
        .badge-warning {
            background-color: #FFC107;
            color: #333;
        }
        
        .badge-secondary {
            background-color: #6c757d;
            color: white;
        }
        
        .badge-info {
            background-color: #17a2b8;
            color: white;
        }
        
        .text-muted {
            color: #fff !important;
            font-size: 11px;
        }

        /* Highlight for active students who haven't submitted */
        tr.candidate-row:has(.badge-info) {
            background-color: rgba(23, 162, 184, 0.05);
        }
        
        /* Active student highlight */
        tr.candidate-row:has(.badge-success) {
            background-color: rgba(76, 175, 80, 0.05);
        }
        
        /* Score breakdown */
        .score-breakdown {
            font-size: 11px;
            color: var(--secondary-text);
            margin-top: 3px;
        }
        .totalsubmission{
            color: #fff;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .card-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .exam-details {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
