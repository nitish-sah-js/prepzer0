<script>
    // Script to show selected filename
    document.getElementById('profile-image').addEventListener('change', function() {
        const fileName = this.files[0]?.name || 'No file selected';
        document.getElementById('file-selected').textContent = fileName;
    });
</script>
<script>
    const fileInput = document.getElementById('profile-image');
    const profileImg = document.getElementById('profileimg');
    const fileSelected = document.getElementById('file-selected');

    fileInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            fileSelected.textContent = file.name;

            const reader = new FileReader();
            reader.onload = function (e) {
                profileImg.src = e.target.result;
            };
            reader.readAsDataURL(file); // Convert image to base64 URL
        } else {
            fileSelected.textContent = "No file selected";
        }
    });
</script>

