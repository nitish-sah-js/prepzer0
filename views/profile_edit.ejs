}

.dropdown-menu {
    background-color: #0d1b3a;
    border: 1px solid #1D4ED8;
}

.dropdown-item {
    color: #b3d1ff;
}

.dropdown-item:hover {
    background-color: #1D4ED8;
    color: #ffffff;
}

/* Container styling */
.container {
    margin-top: 30px;
    margin-bottom: 30px;
}

.main-body {
    padding: 15px;
}

/* Card styling */
.card {
    border: 3px solid #1D4ED8;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.1);
    background-color: #1F2937;
    margin-bottom: 20px;
}

.card-body {
    padding: 25px;
    background-color: #1F2937;
    color: white;
}

/* Profile image */
#profileimg {
    border: 5px solid #1D4ED8;
    padding: 3px;
    width: 150px;
    height: 150px;
    object-fit: cover;
}

#navimg {
    border: 2px solid #1D4ED8;
}

/* Typography */
h2, h4 {
    color: white;
    margin-top: 15px;
    font-weight: 600;
}

h6 {
    color: #b3d1ff;
    font-weight: 600;
}

.text-secondary {
    color: white !important;
}

.text-muted {
    color: #b3d1ff !important;
}

/* Form styling */
input[type="text"],
input[type="number"],
input[type="file"] {
    border: 2px solid #b3d1ff;
    border-radius: 5px;
    padding: 8px 12px;
    width: 100%;
    transition: border-color 0.3s;
    background-color: #2a3749;
    color: white;
}

input[type="text"]:focus,
input[type="number"]:focus {
    border-color: #1D4ED8;
    outline: none;
    box-shadow: 0 0 0 3px rgba(29, 78, 216, 0.25);
}

input[type="file"] {
    padding: 8px 0;
    border: none;
    color: #b3d1ff;
}

input::placeholder {
    color: #8895a7;
}

/* Button styling */
.btn-info {
    background-color: #1D4ED8;
    border-color: #1D4ED8;
    padding: 8px 20px;
    font-weight: 500;
    margin-right: 10px;
}

.btn-info:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Divider */
hr {
    border-top: 1px solid #b3d1ff;
    margin-top: 0.8rem;
    margin-bottom: 0.8rem;
    opacity: 0.3;
}

/* Responsive adjustments */
@media (max-width: 767px) {
    .container {
        padding: 10px;
    }
    
    .card-body {
        padding: 15px;
    }
    
    #profileimg {
        width: 120px;
        height: 120px;
    }
}

/* Additional dark theme fixes */
p {
    color: white;
}

.small {
    color: #b3d1ff !important;
}
    </style>
